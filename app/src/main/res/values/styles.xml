<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#595959</item>
    </style>

    <style name="PostBodyText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">@string/post</item>
    </style>

    <style name="PostBodyText.NameText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">@string/kufre_udoh</item>
    </style>

    <style name="PostBodyText.BioText">
        <item name="android:text">@string/software_engineer_at_google</item>
    </style>

    <style name="LikesAndCommentsTexts.TimePosted">
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/_14h</item>
    </style>

    <style name="LikesAndCommentsTexts">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="LikeIcon">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:contentDescription">@string/like_icon</item>
        <item name="android:src">@drawable/ic_baseline_thumb_up_24</item>
    </style>
</resources>